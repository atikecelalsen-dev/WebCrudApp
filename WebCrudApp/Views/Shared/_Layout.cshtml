<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Logo yazılım</title>   
    <link href="~/src/output.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

</head>

<body class="d-flex flex-column min-vh-100">
<header class="bg-white shadow">
        <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4">

            <a asp-controller="Home" asp-action="Index"
               class="text-2xl font-bold text-blue-600">
                LOGO - WebCrudApp
            </a>

            <!-- DESKTOP MENU -->
            <nav class="hidden items-center gap-6 md:flex">
              
                <a asp-controller="Home" asp-action="Index"
                   class="font-medium text-gray-700 hover:text-blue-600">
                   Home
                </a>

                <a asp-controller="Client" asp-action="Index"
                   class="font-medium text-gray-700 hover:text-blue-600">
                    Client
                </a>

                <a asp-controller="ClientAJAX" asp-action="Index"
                   class="font-medium text-gray-700 hover:text-blue-600">
                    ClientAJAX
                </a>
                <a asp-controller="Item" asp-action="Index"
                   class="font-medium text-gray-700 hover:text-blue-600">
                    Items
                </a>
                  <a asp-controller="Order" asp-action="Index"
                   class="font-medium text-gray-700 hover:text-blue-600">
                    Orders
                </a>
                  <a asp-controller="Invoice" asp-action="Index"
                   class="font-medium text-gray-700 hover:text-blue-600">
                    Invoices
                </a>

                <a class="navbar-nav ms-lg-auto mt-lg-0 mt-3 gap-2">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a class="nav-item text-muted">
                        Merhaba, @User.Identity.Name
                    </a>
                    <a class="nav-item">
                        <a class="rounded-lg bg-blue-600 px-4 py-2 text-white transition hover:bg-blue-700"
                           asp-controller="Account" asp-action="Logout">
                            Çıkış Yap
                        </a>
                    </a>
                }
                else
                {
                    <a class="nav-item">
                        <a class="rounded-lg bg-blue-600 px-4 py-2 text-white transition hover:bg-blue-700"
                           asp-controller="Account" asp-action="Login">
                           Giriş Yap
                        </a>
                    </a>
                }
            </a>
                
            </nav>

            <!-- MOBILE BUTTON -->
            <button id="menuBtn"
                    class="text-gray-700 focus:outline-none md:hidden">

                <!-- Hamburger icon -->
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-7 w-7"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>

        <!-- MOBILE MENU -->
        <div id="mobileMenu"
             class="hidden space-y-4 border-t bg-white px-6 py-4 md:hidden">

            <a asp-controller="Home" asp-action="Index"
               class="block font-medium text-gray-700">
                Home
            </a>

            <a asp-controller="Client" asp-action="Index"
               class="block font-medium text-gray-700">
                Client
            </a>
            <a asp-controller="ClientAJAX" asp-action="Index"
               class="block font-medium text-gray-700">
                ClientAJAX
            </a>

            <a asp-controller="Item" asp-action="Index"
               class="block font-medium text-gray-700">
                Items
            </a>
            <a asp-controller="Order" asp-action="Index"
               class="block font-medium text-gray-700">
                Orders
            </a>
            <a asp-controller="Invoice" asp-action="Index"
               class="block font-medium text-gray-700">
                Invoices
            </a>



            <a class="navbar-nav ms-lg-auto mt-lg-0 mt-3 gap-2">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a class="nav-item text-muted">
                        Merhaba, @User.Identity.Name
                    </a>
                    <a class="nav-item">
                        <a class="rounded-lg bg-blue-600 px-4 py-2 text-white transition hover:bg-blue-700"
                           asp-controller="Account" asp-action="Logout">
                            Çıkış Yap
                        </a>
                    </a>
                }
                else
                {
                    <a class="nav-item">
                        <a class="rounded-lg bg-blue-600 px-4 py-2 text-white transition hover:bg-blue-700"
                           asp-controller="Account" asp-action="Login">
                            Giriş Yap
                        </a>
                    </a>
                }
            </a>


        </div>
    </header>




<main class="mx-auto max-w-7xl flex-grow px-6 py-8">
    @RenderBody()
</main>

<footer class="mt-10 border-t py-4 text-center text-sm text-gray-500">
    © 2025 - WebCrudApp
</footer>


@await RenderSectionAsync("Scripts", required: false)
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>


    <script>
        const btn = document.getElementById("menuBtn");
        const menu = document.getElementById("mobileMenu");

        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });
    </script>


</body>
</html>