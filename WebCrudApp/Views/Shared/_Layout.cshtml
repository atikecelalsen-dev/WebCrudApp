<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - WebCrudApp</title>

    <!-- Bootstrap (TEK KERE) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
            WebCrudApp
        </a>

        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarText">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarText">

            <!-- SOL MENÜ -->
            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Client" asp-action="Index">Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="ClientAJAX" asp-action="Index">Clients AJAX</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Item" asp-action="Index">Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Order" asp-action="Index">Orders</a>
                </li>
            </ul>

            <!-- SAĞ MENÜ (MOBILE-FIRST) -->
            <ul class="navbar-nav ms-lg-auto mt-3 mt-lg-0 gap-2">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item text-muted">
                        Merhaba, @User.Identity.Name
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-danger btn-sm"
                           asp-controller="Account" asp-action="Logout">
                            Çıkış Yap
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn btn-primary btn-sm"
                           asp-controller="Account" asp-action="Login">
                            Giriş Yap
                        </a>
                    </li>
                }
            </ul>

        </div>
    </nav>
</header>

<main class="container my-4 flex-grow-1">
    @RenderBody()
</main>

<footer class="border-top text-center py-3 text-muted">
    © 2025 - WebCrudApp
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</body>
</html>