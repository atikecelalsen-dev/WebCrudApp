
@model Library.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
} 

<div class="flex min-h-screen items-center justify-center bg-gray-100 px-4">

    <div class="w-full max-w-md rounded-xl bg-white p-8 shadow-lg">

        <h2 class="mb-6 text-center text-2xl font-semibold text-gray-800">
            Giriş Yap
        </h2>

        <form asp-action="Login" method="post" class="space-y-5">

            <!-- Username -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Kullanıcı Adı
                </label>
                <input asp-for="Username"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2
                              focus:border-blue-600 focus:outline-none focus:ring-2
                              focus:ring-blue-600" />
                <span asp-validation-for="Username"
                      class="text-sm text-red-600"></span>
            </div>

            <!-- Password -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Şifre
                </label>
                <input asp-for="Password"
                       type="password"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2
                              focus:border-blue-600 focus:outline-none focus:ring-2
                              focus:ring-blue-600" />
                <span asp-validation-for="Password"
                      class="text-sm text-red-600"></span>
            </div>

            <!-- Remember me -->
            <div class="flex items-center gap-2">
                <input asp-for="RememberMe"
                       class="h-4 w-4 rounded border-gray-300
                              text-blue-600 focus:ring-blue-600" />
                <label class="text-sm text-gray-700">
                    Beni hatırla
                </label>
            </div>

            <!-- Info box -->
            <div class="rounded-lg border border-gray-200 bg-gray-50 py-2 text-center text-sm text-gray-600">
                Kişisel bilgileriniz her zaman güvende
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="w-full rounded-lg bg-blue-600 py-2 font-medium text-white
                           transition hover:bg-blue-700">
                Giriş Yap
            </button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    $("form").on("submit", function (e) {

        const password = $("#Password").val();

        if (!password || password.trim() === "") {
            e.preventDefault(); // submit durdur
            alert("Parola boş bırakılamaz!");
            return false;
        }
    });
</script>
