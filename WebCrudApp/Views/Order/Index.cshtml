@model List<WebCrudApp.Models.Order.OrderHeaderModel>

@{
    ViewBag.Title = "Siparişler";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Siparişler</h2>
        <a href="/Order/Create" class="btn btn-primary btn">Yeni Sipariş</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover" border="1" style="border-collapse: collapse;>
            <thead class="table-dark">
                <tr>
                    <th>Sipariş No</th>
                    <th>Tarih</th>
                    <th>Müşteri</th>
                    <th>Net Tutar</th>

                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        
                        <tr data-id="@item.LOGICALREF" style="cursor:pointer">
                            <td>@item.FICHENO</td>
                            <td>@item.DATE_.ToString("yyyy-MM-dd")</td>
                            <td>@item.CLIENTNAME</td>
                            <td>@item.NETTOTAL.ToString("N2")</td>
                            
                            <td> 
                                <button type="button" class="btn btn-secondary"
                                onclick="location.href='/Order/Edit/@item.LOGICALREF'">
                                Düzenle</button>
                         

                                <button type="button" class="btn btn-danger removeLine">Sil</button></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">Hiç sipariş yok</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
        $('tbody').on('click', '.removeLine', function(e){
        
        var row = $(this).closest('tr');
        var logicalRef = row.data('id'); 

        if(!confirm('Bu siparişi silmek istediğinize emin misiniz?')) return;

        $.ajax({
            url: '/Order/DeleteOrder',
            type: 'POST',
            data: { id: logicalRef },
            success: function(response){
                if(response.success){
                    row.remove();
                    window.location.href="/Order/Index";
                } else {
                    alert(response.message);
                }
            },
            error: function(){
                alert('Silme sırasında hata oluştu.');
            }
        });
    });





</script>