<div id="clientListContainer">
    <div class="client-header row d-none d-md-flex">
        <div class="col-2"><strong>ID</strong></div>
        <div class="col-3"><strong>CODE</strong></div>
        <div class="col-7"><strong>İSİM</strong></div>
    </div>

    @foreach (var item in Model)
    {
        <div class="list-row rowSelect"
             data-id="@item.LOGICALREF"
             data-code="@item.CODE"
             data-def="@item.DEFINITION_">

            <div class="col-12 col-md-2"><span class="label d-md-none">ID: </span>@item.LOGICALREF</div>
            <div class="col-12 col-md-3"><span class="label d-md-none">CODE: </span>@item.CODE</div>
            <div class="col-12 col-md-7"><span class="label d-md-none">İSİM: </span>@item.DEFINITION_</div>
        </div>
    }
</div>
